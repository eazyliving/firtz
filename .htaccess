# Protect .cfg and .epi files
<FilesMatch "\.cfg$">
deny from all
</FilesMatch>
<FilesMatch "\.epi$">
deny from all
</FilesMatch>
# Enable rewrite engine and route requests to framework
RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-l
RewriteRule .* index.php [L,QSA]
